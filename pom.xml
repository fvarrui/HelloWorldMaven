<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>io.github.fvarrui</groupId>
	<artifactId>HelloWorldMaven</artifactId>
	<version>1.0.0</version>

	<properties>
		<maven.compiler.target>1.8</maven.compiler.target>
		<maven.compiler.source>1.8</maven.compiler.source>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<exec.mainClass>io.github.fvarrui.helloworld.Main</exec.mainClass>
	</properties>

	<licenses>
		<license>
			<name>GPL-v3.0</name>
			<url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
		</license>
	</licenses>

	<dependencies>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.7</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>io.github.fvarrui</groupId>
				<artifactId>javapackager</artifactId>
				<version>1.1.0</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>package</goal>
						</goals>
						<configuration>
							<platform>auto</platform>
							<bundleJre>true</bundleJre>
							<copyDependencies>true</copyDependencies>
							<additionalResources>
								<additionalResource>src/main/resources/info.txt</additionalResource>
							</additionalResources>
							<generateInstaller>true</generateInstaller>
							<createZipball>true</createZipball>
							<createTarball>true</createTarball>
							<vmArgs>
								<vmArg>-Dcustom.variable="Hi!"</vmArg>
								<vmArg>-Dother.custom.variable="Bye!"</vmArg>
							</vmArgs>
							<fileAssociations> 
								<fileAssociation> 
									<description>HelloWorld File</description> 
									<extension>hello</extension> 
									<mimeType>application/hello</mimeType> 
								</fileAssociation> 
							</fileAssociations>
							<!-- 
							<linuxConfig>
								<wrapJar>false</wrapJar>
							</linuxConfig>
							-->
							<!-- 
							<winConfig>
								<signing> 
										<keystore>c:\Users\fvarrui\keystore.jks</keystore> 
										<storepass>123456</storepass>
										<alias>fvarrui</alias>
								</signing> 
								<registry> 
									<entries> 
										<entry> 
											<key>HKCU:borrame</key> 
											<valueType>REG_SZ</valueType> 
											<valueName>saludo</valueName>
											<valueData>hola</valueData>
										</entry>
									</entries> 
								</registry> 
							</winConfig>
							-->
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
</project>
